# backend/.env

# Django Settings
SECRET_KEY='change-this-to-a-long-random-string-in-production'
DEBUG=1 # 1 for development, 0 for production

# Database Settings (matching docker-compose.yml)
DB_ENGINE=django.db.backends.mysql
DB_NAME=papri_db
DB_USER=papri_user
DB_PASSWORD=papri_password
DB_HOST=db # This is the service name in docker-compose.yml
DB_PORT=3306

# Redis Settings (matching docker-compose.yml)
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant Settings (we will add this service later)
QDRANT_HOST=qdrant
QDRANT_PORT=6333
