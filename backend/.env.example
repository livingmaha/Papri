# backend/.env.example
# Copy this file to .env and fill in your actual values.
# NEVER commit your .env file to version control.

# Django Settings
DJANGO_SECRET_KEY="your_strong_random_secret_key_here" # Change this in production!
DEBUG=True # Set to False in production
DJANGO_ALLOWED_HOSTS="localhost,127.0.0.1,your_production_domain.com" # Comma-separated

# Database (MySQL Example)
DB_ENGINE="django.db.backends.mysql"
DB_NAME="papri_db"
DB_USER="papri_user"
DB_PASSWORD="your_db_password"
DB_HOST="127.0.0.1" # Or your DB server address
DB_PORT="3306"

# Celery Settings
CELERY_BROKER_URL="redis://localhost:6379/0" # Example using Redis
CELERY_RESULT_BACKEND="django-db" # Or "redis://localhost:6379/1" for Redis backend

# Email Settings (for Django Allauth password resets, etc.)
# For development, you can use console backend:
EMAIL_BACKEND="django.core.mail.backends.console.EmailBackend"
# For production (e.g., SendGrid, SMTP):
# EMAIL_BACKEND="django.core.mail.backends.smtp.EmailBackend"
# EMAIL_HOST="smtp.example.com"
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER="your_smtp_username"
# EMAIL_HOST_PASSWORD="your_smtp_password"
DEFAULT_FROM_EMAIL="Papri Support <noreply@yourpaprisite.com>"
PAPRI_BASE_URL="http://localhost:8000" # Your site's base URL for email links

# CORS Allowed Origins (for production, list your frontend domain)
# CORS_ALLOWED_ORIGINS="http://localhost:3000,https://yourfrontenddomain.com" # If frontend is separate

# API Keys
YOUTUBE_API_KEY="AIzaSy..."
VIMEO_ACCESS_TOKEN="your_vimeo_access_token_or_use_oauth_flow" # If using direct token
# VIMEO_CLIENT_ID="your_vimeo_client_id" # For OAuth
# VIMEO_CLIENT_SECRET="your_vimeo_client_secret" # For OAuth
DAILYMOTION_API_URL="https://api.dailymotion.com"
# DAILYMOTION_API_KEY="" # If you have one for Dailymotion

# Payment Gateway (Paystack)
PAYSTACK_SECRET_KEY="sk_your_paystack_secret_key"
PAYSTACK_PUBLIC_KEY="pk_your_paystack_public_key"
# PAYMENT_SUCCESS_REDIRECT_URL="/app/#payment-success" # Ensure these match your frontend routes
# PAYMENT_FAILED_REDIRECT_URL="/app/#payment-failed"
# SIGNUP_CODE_EXPIRY_DAYS=7

# Vector Database (Qdrant Example)
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY="" # If Qdrant is secured with an API key
QDRANT_COLLECTION_TRANSCRIPTS="papri_transcripts_v1"
QDRANT_COLLECTION_VISUAL="papri_visuals_v1"

# AI Model Names (can be overridden by specific model paths if needed)
SENTENCE_TRANSFORMER_MODEL="all-MiniLM-L6-v2"
VISUAL_CNN_MODEL_NAME="EfficientNetV2S" # or "ResNet50" etc.

# Social Auth (Google Example - Get these from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_OAUTH_CLIENT_SECRET="your-google-client-secret"

# Scraper Specific Settings (Example)
MAX_API_RESULTS_PER_SOURCE=7
MAX_SCRAPED_ITEMS_PER_SOURCE=5
SCRAPE_INTER_PLATFORM_DELAY_SECONDS=2
# Define scrapeable platforms as a JSON string
# Each object: name, spider_name, base_url, search_path_template (with {query}), is_active (bool), platform_identifier, default_listing_url (optional)
SCRAPEABLE_PLATFORMS_JSON='[{"name": "PeerTube (Example Instance)", "spider_name": "peertube", "base_url": "https://tilvids.com", "search_path_template": "/api/v1/search/videos?search={query}&nsfw=false&sort=-match", "is_active": true, "platform_identifier": "peertube_tilvids", "default_listing_url": "https://tilvids.com/videos/recently-added"}]'

# Other Application Specific Settings
# MAX_DEMO_SEARCHES=3
# API_BASE_URL_FRONTEND="" # If empty, frontend uses relative paths. Set to "http://localhost:8000/api" if distinct.
